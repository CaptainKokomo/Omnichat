{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "outDir": "../dist/electron",
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "Node16",
    "paths": {
      "@shared/*": ["../dist/shared/*"],
      "@electron/*": ["./*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "uuid"],
    "composite": true
  },
  "include": ["./**/*.ts"],
  "references": [{ "path": "../shared/tsconfig.json" }],
  "exclude": ["../dist", "../release"]
}
