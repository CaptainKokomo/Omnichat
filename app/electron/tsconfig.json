{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "../dist/electron",
    "rootDir": "..",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"],
  "exclude": ["../dist", "../release"]
}
