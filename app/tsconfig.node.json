{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@electron/*": ["electron/*"]
    }
  },
  "include": ["vite.config.ts", "electron/**/*.ts", "shared/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["dist", "release"]
}
